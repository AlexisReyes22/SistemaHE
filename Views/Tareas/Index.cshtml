@model IEnumerable<SistemaHE.Models.Tareas>

@{
    ViewBag.Title = "Administracion de Tareas";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>


@foreach (var item in Model)
{
    <div class="row">
        <div class="col s12 m6">
            <div class="card blue-grey darken-1">
                <div class="card-content white-text">
                    <span class="card-title"> @Html.DisplayFor(modelItem => item.ID_Tarea)</span>
                    <p>
                        @Html.DisplayFor(modelItem => item.DetalleDeLaTarea)
                    </p>

                </div>
                <div class="card-action">
                    @Html.ActionLink("Edit", "Edit", new { id = item.ID_Tarea }) |
                    @Html.ActionLink("Details", "Details", new { id = item.ID_Tarea }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.ID_Tarea })
                    <a href="#">This is a link</a>
                </div>
            </div>
        </div>
    </div>
}


