@model SistemaHE.Models.Usuarios

@{
    ViewBag.Title = "Delete";
}

<h2>Usuarios</h2>


<div>

    <div id="Content">
        <div class="Contenido">
            <h3>¿Está seguro que desea eliminar esto?</h3>
            <hr />
            <dl class="dl-horizontal">
                <dt>
                    Nombre Completo
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Nombre_Completo, new { htmlAttributes = new { @class = "form", @style = " color: white;" } })
                </dd>

                <dt>
                    Jefe Inmediato
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Jefe_Inmediato)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Edad)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Edad)
                </dd>

                <dt>
                    Teléfono Residencial
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Telefono_Residencial)
                </dd>

                <dt>
                    Teléfono Celular
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Telefono_Celular)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Departamento)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Departamento)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Rol)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Rol)
                </dd>

            </dl>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <p id="pagina">
                    @Html.ActionLink("Eliminar", "Edit", new { id = Model.Identificacion }, htmlAttributes: new { @class = "waves-button-input btn-small light-blue darken-2  white-text" }) |
                    @Html.ActionLink("Volver", "Index", null, htmlAttributes: new { @class = "waves-button-input btn-small light-blue darken-2  white-text" })
                </p>

            }
        </div>

    </div>

</div>
