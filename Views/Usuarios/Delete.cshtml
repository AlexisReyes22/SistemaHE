@model SistemaHE.Models.Usuarios

@{
    ViewBag.Title = "Delete";
}
<div id="textoH">
    <br />
    <h2>Usuarios</h2>
</div>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div id="ContentL">

        <div class="ContenidoL">

            <h3>¿Está seguro que desea eliminar esto?</h3>

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Identificacion)
            <div class="row">
                <div id="formula" class="col s6">

                    @Html.LabelFor(model => model.Nombre_Completo, "Nombre Completo", htmlAttributes: new { @class = "" })
                    @Html.EditorFor(model => model.Nombre_Completo, new { htmlAttributes = new { disabled = "disabled" } })

                    @Html.LabelFor(model => model.Jefe_Inmediato, "Jefe Inmediato", htmlAttributes: new { @class = "" })
                    @Html.EditorFor(model => model.Jefe_Inmediato, new { htmlAttributes = new { disabled = "disabled" } })

                    @Html.LabelFor(model => model.Edad, htmlAttributes: new { @class = "" })
                    @Html.EditorFor(model => model.Edad, new { htmlAttributes = new { disabled = "disabled" } })

                    @Html.LabelFor(model => model.Telefono_Residencial, "Teléfono Residencial", htmlAttributes: new { @class = "" })
                    @Html.EditorFor(model => model.Telefono_Residencial, new { htmlAttributes = new { disabled = "disabled" } })




                </div>

                <div id="formula" class="col s6">

                    @Html.LabelFor(model => model.Telefono_Celular, "Teléfono Celular", htmlAttributes: new { @class = "" })
                    @Html.EditorFor(model => model.Telefono_Celular, new { htmlAttributes = new { disabled = "disabled" } })

                    @Html.LabelFor(model => model.Departamento, htmlAttributes: new { @class = "" })
                    @Html.EditorFor(model => model.Departamento, new { htmlAttributes = new { disabled = "disabled" } })

                    @Html.LabelFor(model => model.Rol, htmlAttributes: new { @class = "" })
                    @Html.EditorFor(model => model.Rol, new { htmlAttributes = new { disabled = "disabled" } })







                </div>
            </div>


            <div id="pagina">
                @Html.ActionLink("Eliminar", "Edit", new { id = Model.Identificacion }, htmlAttributes: new { @class = "waves-button-input btn-small" })
                @Html.ActionLink("Volver", "Index", null, htmlAttributes: new { @class = "waves-button-input btn-small " })
            </div>

        </div>

    </div>
}


