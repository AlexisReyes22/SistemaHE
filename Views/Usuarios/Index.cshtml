@model IEnumerable<SistemaHE.Models.Usuarios>

@{
    ViewBag.Title = "Administracion de Usuarios";
}
<div id="textoH">
    <br />
    <h2>Usuarios</h2>
</div>

<div id="ContentII">

    <div class="ContenidoI">

        <table class="table">
            <tr>
                <th>
                    Nombre Completo
                </th>
                <th>
                    Jefe Inmediato
                <th>
                    Edad
                </th>
                <th>
                    Telefono Residencial
                </th>
                <th>
                    Telefono Celular
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Departamento)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Rol)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nombre_Completo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Jefe_Inmediato)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Edad)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Telefono_Residencial)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Telefono_Celular)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Departamento)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Rol)
                    </td>
                    <td>
                        <a href="@Url.Action("Edit", "Usuarios", new { id = item.Identificacion })">
                            <i class="material-icons">edit</i>

                        </a>
                        <a href="@Url.Action("Details", "Usuarios", new { id = item.Identificacion })">
                            <i class="material-icons">search</i>

                        </a>
                        <a href="@Url.Action("Delete", "Usuarios", new { id = item.Identificacion })">
                            <i class="material-icons">delete</i>

                        </a>

                    </td>
                </tr>
            }

        </table>
        <div id="pagina">


            @Html.ActionLink("Agregar", "Create", null, htmlAttributes: new { @class = "waves-button-input btn-small " })

        </div>


    </div>
</div>
