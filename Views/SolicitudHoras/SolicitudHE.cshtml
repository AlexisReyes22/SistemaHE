@model SistemaHE.Models.SolicitudHoras


@{
    ViewBag.Title = "SolicitudHE";
}



<div id="textoH">
    <br />
    <h2>Solicitud Horas Extra</h2>
</div>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div id="ContentL">
        <div class="ContenidoL">
            <h3>Nueva Solicitud</h3>

            <div id="formula">
                <div class="row">
                    <div class="col l8">


                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })


                        @Html.DropDownList("ID_Tarea", null, htmlAttributes: new { @class = "dropdown-trigger btn" })
                        @Html.ValidationMessageFor(model => model.ID_Tarea, "", new { @class = "text-danger" })


                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <br />

                        @Html.LabelFor(model => model.Remitente, "Remitente", htmlAttributes: new { @class = "control-label col-md-2" })

                        <input type="text" name="name" disabled value="@Session["Nombre"]" />
                        @Html.ValidationMessageFor(model => model.Remitente, "", new { @class = "text-danger" })



                        @{


                            if (Session["Rol"].Equals("Jefe"))
                            {
                                @Html.LabelFor(model => model.Destinatario1, "Destinatario 1", htmlAttributes: new { @class = "control-label col-md-2" })
                                @Html.DropDownList("Destinatario1", null, htmlAttributes: new { @class = "dropdown-trigger btn" })
                                @Html.ValidationMessageFor(model => model.Destinatario1, "", new { @class = "text-danger" })

                                @Html.LabelFor(model => model.Destinatario2, "Destinatario 2", htmlAttributes: new { @class = "control-label col-md-2" })
                                @Html.DropDownList("Destinatario2", null, htmlAttributes: new { @class = "dropdown-trigger btn" })
                                @Html.ValidationMessageFor(model => model.Destinatario2, "", new { @class = "text-danger" })

                                @Html.LabelFor(model => model.Destinatario3, "Destinatario 3", htmlAttributes: new { @class = "control-label col-md-2" })
                                @Html.DropDownList("Destinatario3", null, htmlAttributes: new { @class = "dropdown-trigger btn" })
                                @Html.ValidationMessageFor(model => model.Destinatario3, "", new { @class = "text-danger" })

                            }
                            else
                            {
                                @Html.LabelFor(model => model.JefeDestinatario, "JefeDestinatario", htmlAttributes: new { @class = "control-label col-md-2" })
                                <input type="text" name="JefeDestinatario" hidden disabled value="@Session["CedulaJefe"]" />
                                <input type="text" name="name" disabled value="@Session["Jefe_Inmediato"]" />

                                @Html.ValidationMessageFor(model => model.JefeDestinatario, "", new { @class = "text-danger" })

                            }
                        }

                        <br />

                        @Html.LabelFor(model => model.CantidadDeHoras, "Cantidad de horas", htmlAttributes: new { @class = "control-label col-md-2" })


                        @Html.EditorFor(model => model.CantidadDeHoras, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.CantidadDeHoras, "", new { @class = "text-danger" })




                    </div>
                </div>



            </div>
            <div id="pagina">
                <input type="submit" value="Agregar" class="waves-button-input btn-small " />


                @*  @Html.ActionLink("Agregar", "NuevaSHE", null, htmlAttributes: new { @class = "waves-button-input btn-small " })*@


                @Html.ActionLink("Volver", "Index", null, htmlAttributes: new { @class = "waves-button-input btn-small " })

            </div>
        </div>

    </div>


}