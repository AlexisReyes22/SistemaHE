@model IEnumerable<SistemaHE.Models.SolicitudHoras>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

@foreach (var item in Model)
{
    <div class="row">
        <div class="col s12 m6">
            <div class="card blue-grey darken-1">
                <div class="card-content white-text">
                    <span class="card-title">@Html.DisplayFor(modelItem => item.Tareas.DetalleDeLaTarea)</span>
                    <p>
                        @Html.DisplayFor(modelItem => item.CantidadDeHoras)
                        @Html.DisplayFor(modelItem => item.Estado)
                    </p>

                </div>
                <div class="card-action">
                    @Html.ActionLink("Edit", "Edit", new { id = item.ID_Transaccion })
                    @Html.ActionLink("Details", "Details", new { id = item.ID_Transaccion }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.ID_Transaccion })
                    <a href="#">This is a link</a>
                </div>
            </div>
        </div>
    </div>
}


