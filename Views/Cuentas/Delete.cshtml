@model SistemaHE.Models.Cuentas

@{
    ViewBag.Title = "Delete";
}

<div id="textoH">
    <br />
    <h2>Cuentas</h2>
</div>

<div>
    <div id="ContentL">
        <div class="ContenidoL">
            <h3>¿Está seguro que desea eliminar esto?</h3>
            
            <dl class="dl-horizontal">

                <dt>
                    @Html.LabelFor(model => model.Contrasenna, "Contraseña", htmlAttributes: new { @class = "central-align", @style = "font-size:20px; color:black;" })
                </dt>

                <dd>
                    @Html.EditorFor(model => model.Contrasenna, new { htmlAttributes = new { @class = "black-text", @style = " background-color: white; border-radius: 10px 10px 10px 10px;", disabled = "disabled" } })
                </dd>

                <dt>
                    @Html.LabelFor(model => model.Usuarios.Nombre_Completo, "Nombre Completo", htmlAttributes: new { @class = "central-align", @style = "font-size:20px; color:black;" })

                </dt>

                <dd>
                    @Html.EditorFor(model => model.Usuarios.Nombre_Completo, new { htmlAttributes = new { @class = "black-text", @style = " background-color: white; border-radius: 10px 10px 10px 10px;", disabled = "disabled" } })
                </dd>

            </dl>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                        
                    <input type="submit" value="Eliminar" class="waves-button-input btn-small light-blue darken-2  white-text" /> |
                    @Html.ActionLink("Volver", "Index", null, htmlAttributes: new { @class = "waves-button-input btn-small light-blue darken-2  white-text" })

                </div>
            }


        </div>
    </div>
</div>
