@model SistemaHE.Models.Cuentas

@{
    ViewBag.Title = "Create";
}
<div id="fondoC">
    <h2>Cuentas</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div id="Content">
            <div id="Contenido">

                <h4>Agregar</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    <div class="col-md-10">
                        @Html.DropDownList("Identificacion", null, htmlAttributes: new { @class = "dropdown-trigger btn" })
                        @Html.ValidationMessageFor(model => model.Identificacion, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Contrasenna, "Contraseña", htmlAttributes: new { @class = "control-label col-md-2" })

                    <div class="Texto">
                        @Html.EditorFor(model => model.Contrasenna, new { htmlAttributes = new { @class = "form-control",
                       @style = " background-color: white; border-radius: 10px 10px 10px 10px;"} })
                        @Html.ValidationMessageFor(model => model.Contrasenna, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Agregar" class="btn btn-default" />
                    </div>
                </div>
            </div>
        </div>
    }
</div>
    <div>
        @Html.ActionLink("Volver", "Index")
    </div>
