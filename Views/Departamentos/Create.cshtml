@model SistemaHE.Models.Departamentos

@{
    ViewBag.Title = "Create";
}
<div id="textoH">
    <br />
    <h2>Departamentos</h2>
</div>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()


    <div id="ContentL">
        <div class="ContenidoL">

            <div class="form-horizontal">
                <h4>Agregar</h4>
                
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div id="formula">
                    <div class="row">
                        <div class="col l6">
                            @Html.LabelFor(model => model.ID_Departamento,"ID Departamento", htmlAttributes: new { @class = "control-label col-md-2" })

                            @Html.EditorFor(model => model.ID_Departamento, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.ID_Departamento, "", new { @class = "text-danger" })
                        </div>



                        <div class="col l6">
                            @Html.LabelFor(model => model.Nombre_Departamento, "Nombre Departamento", htmlAttributes: new { @class = "control-label col-md-2" })

                            @Html.EditorFor(model => model.Nombre_Departamento, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Nombre_Departamento, "", new { @class = "text-danger" })
                        </div>

                    </div>

                </div>
                <div id="pagina">

                    <input type="submit" value="Agregar" class="waves-button-input btn-small" />


                    @Html.ActionLink("Volver", "Index", null, htmlAttributes: new { @class = "waves-button-input btn-small" })

                </div>
            </div>
        </div>
    </div>


}

