@model SistemaHE.Models.Cuentas
@{
    ViewBag.Title = "login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div id="textoH">
    <br />
    <h2>Inicio de sesión</h2>
</div>


@Html.AntiForgeryToken()

<div id="ContentL">
    <div class="ContenidoL">

        <form id="#frm" action="/" method="post">
            <div id="formula">

                <label>Ingrese su Identificación</label>
                @*<p id="poc">Ingrese su Identificación</p>*@
                <br />
                <br />
                <input id="login" type="text" name="user" value="" placeholder="" />
                <br />
                @*<p id="poc">Ingrese su Contraseña</p>*@
                <label>Ingrese su Contraseña</label>

                <br />
                <br />
                <input id="login" type="password" name="pass" value="" placeholder="" />

            </div>
            <div class="but">
                <input type="submit" value="Ingresar" class=" btn-small  " id="but" />


            </div>



        </form>
    </div>
</div>






@section Scripts {
    <script>
            $(document).ready(function()
        {
            $("#frm").submit(function (e) {
                e.preventDefault();

                url = "@Url.Content("~/Login/Login")"
                parametros = $(this).serialize();
                $.post(url, parametros, function (data) {
                    if (data == "1") {
                        document.location.href = "@Url.Content("~/")";

                    } else {
                        alert(data)
                    }
                }
                )
            })
        })



    </script>
    @Scripts.Render("~/bundles/jqueryval")
}
